<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1754180483091-11" author="Baran">
        <addColumn tableName="users">
            <column defaultValueBoolean="true" name="is_active" type="BOOLEAN"/>
            <column name="phone" type="VARCHAR(11)"/>
            <column name="surname" type="VARCHAR(50)"/>
            <column name="username" type="VARCHAR(50)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1754180483091-12" author="Baran">
        <addNotNullConstraint columnName="is_active" tableName="users"/>
    </changeSet>
    <changeSet id="1754180483091-1" author="Baran">
        <modifyDataType columnName="email" newDataType="text(2147483647)" tableName="users"/>
    </changeSet>
    <changeSet id="1754180483091-2" author="Baran">
        <dropNotNullConstraint columnDataType="clob" columnName="email" tableName="users"/>
    </changeSet>
    <changeSet id="1754180483091-3" author="Baran">
        <dropColumn columnName="id" tableName="users"/>

        <dropColumn columnName="role_id" tableName="users"/>

        <dropColumn columnName="subscription_id" tableName="users"/>
    </changeSet>
    <changeSet id="1754180483091-4" author="Baran">
        <addColumn tableName="users">
            <column defaultValueComputed="nextval('users_id_seq')" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users" validateNullable="true"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="1754180483091-5" author="Baran">
        <modifyDataType columnName="name" newDataType="VARCHAR(50)" tableName="users"/>
    </changeSet>
    <changeSet id="1754180483091-6" author="Baran">
        <modifyDataType columnName="password" newDataType="text(2147483647)" tableName="users"/>
    </changeSet>
    <changeSet id="1754180483091-8" author="Baran">
        <addColumn tableName="users">
            <column name="role_id" type="BIGINT">
                <constraints foreignKeyName="FK_USERS_ON_ROLE" references="roles(id)"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="1754180483091-10" author="Baran">
        <addColumn tableName="users">
            <column name="subscription_id" type="BIGINT">
                <constraints foreignKeyName="FK_USERS_ON_SUBSCRIPTION" references="subscriptions(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>